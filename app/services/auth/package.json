{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice for MiniBank",
  "main": "src/auth.js",
  "scripts": {
    "start": "node src/auth.js",
    "dev": "nodemon src/auth.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch"
  },
  "keywords": ["auth", "jwt", "microservice"],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "express": "^4.18.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}