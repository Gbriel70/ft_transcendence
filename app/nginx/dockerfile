FROM owasp/modsecurity-crs:nginx-alpine

USER root

RUN apk add --no-cache \
    openssl \
    curl

RUN mkdir -p \
    /etc/nginx/certs \
    /etc/nginx/conf.d \
    /etc/nginx/sites \
    /var/log/modsecurity

COPY nginx.conf /etc/nginx/nginx.conf
COPY conf.d/ /etc/nginx/conf.d/
COPY sites/ /etc/nginx/sites/

COPY modsecurity/modsecurity.conf /etc/modsecurity.d/modsecurity.conf
COPY modsecurity/custom_rules.conf /etc/modsecurity.d/user-conf/custom_rules.conf
COPY modsecurity/exclusions.conf /etc/modsecurity.d/user-conf/exclusions.conf

COPY docker-entrypoint.sh /docker-entrypoint.sh

RUN chmod +x /docker-entrypoint.sh && \
    chown -R nginx:nginx \
    /var/log/nginx \
    /var/log/modsecurity \
    /var/cache/nginx 

HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD curl -f http://localhost/health || exit 1

EXPOSE 80 443

ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["nginx", "-g", "daemon off;"]